<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - SuperAdmin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body { background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 50%, #0f172a 100%); }
        .glass { background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(10px); }
        .custom-scrollbar::-webkit-scrollbar { width: 6px; }
        .custom-scrollbar::-webkit-scrollbar-track { background: transparent; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: rgba(75, 85, 99, 0.5); border-radius: 10px; }
    </style>
</head>
<body class="min-h-screen text-gray-100">
    
    <!-- Navbar -->
    <nav class="sticky top-0 z-50 glass border-b border-gray-700/50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-red-500 via-orange-500 to-yellow-500 flex items-center justify-center text-white font-extrabold text-lg shadow-lg">
                        SA
                    </div>
                    <div>
                        <span class="text-lg font-bold text-white">Super<span class="text-orange-400">Admin</span></span>
                        <p class="text-[10px] text-gray-500 uppercase tracking-wider">Gerenciamento</p>
                    </div>
                </div>
                
                <div class="hidden md:flex items-center gap-1 bg-gray-900/50 p-1.5 rounded-xl border border-gray-700/50">
                    <a href="/superadmin/dashboard" class="px-4 py-2 rounded-lg text-sm font-medium bg-orange-600/20 text-orange-400 border border-orange-500/30">Dashboard</a>
                    <a href="/superadmin/tenants" class="px-4 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-800/50">Clientes</a>
                    <a href="/superadmin/plans" class="px-4 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-800/50">Planos</a>
                    <a href="/superadmin/reports" class="px-4 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-800/50">Relatórios</a>
                </div>
                
                <div class="flex items-center gap-3">
                    <span id="userName" class="text-sm text-gray-400"></span>
                    <button onclick="logout()" class="p-2 hover:bg-red-900/20 rounded-lg text-gray-400 hover:text-red-400 transition">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                    </button>
                </div>
            </div>
        </div>
    </nav>
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-2xl font-bold text-white">Dashboard</h1>
            <p class="text-gray-400">Visão geral da plataforma</p>
        </div>
        
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="glass rounded-2xl border border-gray-700/50 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm">Total de Clientes</p>
                        <p id="stat-tenants" class="text-3xl font-bold text-white mt-1">-</p>
                        <p id="stat-tenants-active" class="text-xs text-green-400 mt-1"></p>
                    </div>
                    <div class="w-12 h-12 rounded-xl bg-blue-500/20 flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                    </div>
                </div>
            </div>
            
            <div class="glass rounded-2xl border border-gray-700/50 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm">Usuários Ativos</p>
                        <p id="stat-users" class="text-3xl font-bold text-white mt-1">-</p>
                        <p class="text-xs text-gray-500 mt-1">Em todos os tenants</p>
                    </div>
                    <div class="w-12 h-12 rounded-xl bg-green-500/20 flex items-center justify-center">
                        <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                    </div>
                </div>
            </div>
            
            <div class="glass rounded-2xl border border-gray-700/50 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm">Pesquisas Enviadas</p>
                        <p id="stat-surveys" class="text-3xl font-bold text-white mt-1">-</p>
                        <p id="stat-surveys-month" class="text-xs text-orange-400 mt-1"></p>
                    </div>
                    <div class="w-12 h-12 rounded-xl bg-orange-500/20 flex items-center justify-center">
                        <svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>
                    </div>
                </div>
            </div>
            
            <div class="glass rounded-2xl border border-gray-700/50 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm">Receita Mensal</p>
                        <p id="stat-revenue" class="text-3xl font-bold text-white mt-1">-</p>
                        <p class="text-xs text-purple-400 mt-1">MRR estimado</p>
                    </div>
                    <div class="w-12 h-12 rounded-xl bg-purple-500/20 flex items-center justify-center">
                        <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            
            <!-- Recent Tenants -->
            <div class="lg:col-span-2 glass rounded-2xl border border-gray-700/50 overflow-hidden">
                <div class="p-6 border-b border-gray-700/50 flex justify-between items-center">
                    <h2 class="text-lg font-bold text-white">Clientes Recentes</h2>
                    <a href="/superadmin/tenants" class="text-sm text-orange-400 hover:text-orange-300">Ver todos →</a>
                </div>
                <div id="recent-tenants" class="divide-y divide-gray-700/50">
                    <div class="p-8 text-center text-gray-500">Carregando...</div>
                </div>
            </div>
            
            <!-- Plans Distribution -->
            <div class="glass rounded-2xl border border-gray-700/50 p-6">
                <h2 class="text-lg font-bold text-white mb-4">Distribuição por Plano</h2>
                <canvas id="plansChart" height="200"></canvas>
                <div id="plans-legend" class="mt-4 space-y-2"></div>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-4">
            <button onclick="window.location.href='/superadmin/tenants/new'" class="glass rounded-xl border border-gray-700/50 p-4 hover:border-green-500/50 transition flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-green-500/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                </div>
                <div class="text-left">
                    <p class="font-medium text-white">Novo Cliente</p>
                    <p class="text-sm text-gray-400">Criar tenant</p>
                </div>
            </button>
            
            <button onclick="window.location.href='/superadmin/plans'" class="glass rounded-xl border border-gray-700/50 p-4 hover:border-purple-500/50 transition flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-purple-500/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>
                </div>
                <div class="text-left">
                    <p class="font-medium text-white">Gerenciar Planos</p>
                    <p class="text-sm text-gray-400">Preços e limites</p>
                </div>
            </button>
            
            <button onclick="window.location.href='/superadmin/reports'" class="glass rounded-xl border border-gray-700/50 p-4 hover:border-blue-500/50 transition flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-blue-500/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                </div>
                <div class="text-left">
                    <p class="font-medium text-white">Relatórios</p>
                    <p class="text-sm text-gray-400">Analytics da plataforma</p>
                </div>
            </button>
        </div>
    </main>

    <script>
        const token = localStorage.getItem('superadmin_token');
        if (!token) window.location.href = '/superadmin';
        
        const user = JSON.parse(localStorage.getItem('superadmin_user') || '{}');
        document.getElementById('userName').textContent = user.name || user.email;
        
        function logout() {
            localStorage.removeItem('superadmin_token');
            localStorage.removeItem('superadmin_user');
            window.location.href = '/superadmin';
        }
        
        async function loadDashboard() {
            try {
                const res = await fetch('/api/superadmin/dashboard', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (res.status === 401) {
                    logout();
                    return;
                }
                
                const data = await res.json();
                
                // Stats
                document.getElementById('stat-tenants').textContent = data.totalTenants || 0;
                document.getElementById('stat-tenants-active').textContent = `${data.activeTenants || 0} ativos`;
                document.getElementById('stat-users').textContent = data.totalUsers || 0;
                document.getElementById('stat-surveys').textContent = (data.totalSurveys || 0).toLocaleString();
                document.getElementById('stat-surveys-month').textContent = `${(data.surveysThisMonth || 0).toLocaleString()} este mês`;
                document.getElementById('stat-revenue').textContent = `R$ ${(data.mrr || 0).toLocaleString('pt-BR', { minimumFractionDigits: 2 })}`;
                
                // Recent Tenants
                const tenantsContainer = document.getElementById('recent-tenants');
                if (data.recentTenants && data.recentTenants.length > 0) {
                    tenantsContainer.innerHTML = data.recentTenants.map(t => `
                        <div class="p-4 hover:bg-gray-800/30 transition flex items-center justify-between">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold">
                                    ${t.name.charAt(0).toUpperCase()}
                                </div>
                                <div>
                                    <p class="font-medium text-white">${t.name}</p>
                                    <p class="text-xs text-gray-500">${t.ownerEmail || t.slug}</p>
                                </div>
                            </div>
                            <div class="text-right">
                                <span class="px-2 py-1 text-xs rounded-full ${t.isActive ? 'bg-green-900/50 text-green-400' : 'bg-red-900/50 text-red-400'}">
                                    ${t.isActive ? 'Ativo' : 'Inativo'}
                                </span>
                                <p class="text-xs text-gray-500 mt-1">${t.plan?.displayName || 'FREE'}</p>
                            </div>
                        </div>
                    `).join('');
                } else {
                    tenantsContainer.innerHTML = '<div class="p-8 text-center text-gray-500">Nenhum cliente cadastrado</div>';
                }
                
                // Plans Chart
                if (data.planDistribution) {
                    const colors = ['#22c55e', '#3b82f6', '#a855f7', '#f59e0b'];
                    const ctx = document.getElementById('plansChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: data.planDistribution.map(p => p.name),
                            datasets: [{
                                data: data.planDistribution.map(p => p.count),
                                backgroundColor: colors,
                                borderWidth: 0
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: { legend: { display: false } },
                            cutout: '70%'
                        }
                    });
                    
                    document.getElementById('plans-legend').innerHTML = data.planDistribution.map((p, i) => `
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-2">
                                <div class="w-3 h-3 rounded-full" style="background: ${colors[i]}"></div>
                                <span class="text-sm text-gray-300">${p.name}</span>
                            </div>
                            <span class="text-sm font-medium text-white">${p.count}</span>
                        </div>
                    `).join('');
                }
                
            } catch (e) {
                console.error(e);
            }
        }
        
        loadDashboard();
    </script>
</body>
</html>

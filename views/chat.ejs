    <script src="/socket.io/socket.io.js"></script>
    <script>
        const token = localStorage.getItem('nps_token');
        if (!token) window.location.href = '/login.html';
        
        let socket = null;
        let currentConversation = null;
        let conversations = [];
        let allCustomers = [];
        
        // ============================================
        // INICIALIZA√á√ÉO
        // ============================================
        
        document.addEventListener('DOMContentLoaded', () => {
            initSocket();
            loadConversations();
            loadCustomers();
            checkWhatsAppStatus();
            
            // Auto-refresh
            setInterval(() => {
                loadConversations(true);
                if (currentConversation) loadMessages(currentConversation.id, true);
            }, 5000);
        });
        
        function initSocket() {
            socket = io({ auth: { token } });
            
            socket.on('connect', () => console.log('üîå Socket conectado'));
            
            socket.on('chat:message', (data) => {
                console.log('üì© Nova mensagem:', data);
                loadConversations(true);
                if (currentConversation && (data.conversationId === currentConversation.id || data.customerId === currentConversation.id)) {
                    loadMessages(currentConversation.id, true);
                }
                playNotificationSound();
            });
            
            socket.on('whatsapp:status', updateWhatsAppStatus);
        }
        
        // ============================================
        // WHATSAPP STATUS
        // ============================================
        
        async function checkWhatsAppStatus() {
            try {
                const res = await fetch('/api/whatsapp/status', { headers: { 'Authorization': `Bearer ${token}` } });
                if (res.ok) updateWhatsAppStatus(await res.json());
            } catch (e) {}
        }
        
        function updateWhatsAppStatus(data) {
            const dot = document.getElementById('wa-status-dot');
            const text = document.getElementById('wa-status-text');
            
            if (data.isConnected) {
                dot.className = 'w-2.5 h-2.5 rounded-full bg-green-500 online-indicator';
                text.textContent = 'Conectado';
                text.className = 'text-sm text-green-400';
            } else {
                dot.className = 'w-2.5 h-2.5 rounded-full bg-red-500';
                text.textContent = 'Desconectado';
                text.className = 'text-sm text-red-400';
            }
        }
        
        // ============================================
        // CONVERSAS
        // ============================================
        
        async function loadConversations(silent = false) {
            try {
                const res = await fetch('/api/chat/conversations', { headers: { 'Authorization': `Bearer ${token}` } });
                if (res.ok) {
                    conversations = await res.json();
                    renderConversations();
                    document.getElementById('total-conversations').textContent = conversations.length;
                    document.getElementById('unread-count').textContent = conversations.reduce((a, c) => a + (c.unreadCount || 0), 0);
                }
            } catch (e) { if (!silent) console.error(e); }
        }
        
        function renderConversations() {
            const container = document.getElementById('conversations-list');
            const searchTerm = document.getElementById('search-conversations').value.toLowerCase();
            
            let filtered = conversations;
            if (searchTerm) {
                filtered = filtered.filter(c => 
                    (c.customerName && c.customerName.toLowerCase().includes(searchTerm)) ||
                    (c.phone && c.phone.includes(searchTerm))
                );
            }
            
            if (filtered.length === 0) {
                container.innerHTML = `<div class="p-8 text-center text-gray-500"><p class="text-sm">Nenhuma conversa</p><button onclick="openNewChat()" class="mt-3 text-indigo-400 text-sm">+ Nova conversa</button></div>`;
                return;
            }
            
            container.innerHTML = filtered.map(conv => {
                const isActive = currentConversation && currentConversation.id === conv.id;
                const initial = conv.customerName ? conv.customerName.charAt(0).toUpperCase() : '?';
                const lastMsg = conv.lastMessage ? (conv.lastMessage.substring(0, 35) + (conv.lastMessage.length > 35 ? '...' : '')) : 'Sem mensagens';
                const time = conv.lastMessageAt ? formatTimeShort(conv.lastMessageAt) : '';
                
                let npsBadge = '';
                if (conv.lastNpsScore !== null && conv.lastNpsScore !== undefined) {
                    const color = conv.lastNpsScore >= 9 ? 'green' : conv.lastNpsScore >= 7 ? 'yellow' : 'red';
                    npsBadge = `<span class="px-1.5 py-0.5 bg-${color}-900/50 text-${color}-400 text-[10px] font-bold rounded">${conv.lastNpsScore}</span>`;
                }
                
                return `
                    <div onclick="selectConversation('${conv.id}')" class="conversation-item p-4 cursor-pointer border-b border-gray-700/30 ${isActive ? 'active' : ''}">
                        <div class="flex items-start gap-3">
                            <div class="w-11 h-11 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold flex-shrink-0">${initial}</div>
                            <div class="flex-1 min-w-0">
                                <div class="flex justify-between items-start">
                                    <div class="min-w-0">
                                        <h4 class="font-semibold text-white truncate">${conv.customerName || 'Cliente'}</h4>
                                        <p class="text-xs text-gray-500 font-mono">${formatPhoneDisplay(conv.phone)}</p>
                                    </div>
                                    <span class="text-[10px] text-gray-500">${time}</span>
                                </div>
                                <div class="flex items-center justify-between mt-1">
                                    <p class="text-sm text-gray-400 truncate">${escapeHtml(lastMsg)}</p>
                                    <div class="flex items-center gap-1 ml-2">
                                        ${npsBadge}
                                        ${conv.unreadCount > 0 ? `<span class="unread-badge w-5 h-5 bg-indigo-600 rounded-full flex items-center justify-center text-white text-[10px] font-bold">${conv.unreadCount}</span>` : ''}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }
        
        function filterConversations() { renderConversations(); }
        
        // ============================================
        // CHAT
        // ============================================
        
        async function selectConversation(id) {
            const conv = conversations.find(c => c.id === id);
            if (!conv) return;
            
            currentConversation = conv;
            
            document.getElementById('chat-empty').classList.add('hidden');
            document.getElementById('chat-header').classList.remove('hidden');
            document.getElementById('chat-messages').classList.remove('hidden');
            document.getElementById('chat-input-container').classList.remove('hidden');
            
            const initial = conv.customerName ? conv.customerName.charAt(0).toUpperCase() : '?';
            document.getElementById('chat-avatar').textContent = initial;
            document.getElementById('chat-name').textContent = conv.customerName || 'Cliente';
            document.getElementById('chat-phone').textContent = formatPhoneDisplay(conv.phone);
            
            if (conv.lastNpsScore !== null && conv.lastNpsScore !== undefined) {
                const badge = document.getElementById('chat-nps-badge');
                badge.classList.remove('hidden');
                document.getElementById('chat-nps-score').textContent = conv.lastNpsScore;
                const color = conv.lastNpsScore >= 9 ? 'green' : conv.lastNpsScore >= 7 ? 'yellow' : 'red';
                badge.className = `px-3 py-1 rounded-full text-xs font-bold bg-${color}-900/50 text-${color}-400 border border-${color}-500/30`;
            } else {
                document.getElementById('chat-nps-badge').classList.add('hidden');
            }
            
            await loadMessages(id);
            renderConversations();
            document.getElementById('message-input').focus();
            markAsRead(id);
        }
        
        async function loadMessages(conversationId, silent = false) {
            try {
                const res = await fetch(`/api/chat/conversations/${conversationId}/messages`, { headers: { 'Authorization': `Bearer ${token}` } });
                if (res.ok) {
                    const messages = await res.json();
                    renderMessages(messages);
                }
            } catch (e) { if (!silent) console.error(e); }
        }
        
        function renderMessages(messages) {
            const container = document.getElementById('chat-messages');
            
            if (messages.length === 0) {
                container.innerHTML = `<div class="text-center py-8"><p class="text-gray-500 text-sm">Nenhuma mensagem. Envie a primeira!</p></div>`;
                return;
            }
            
            let html = '';
            let lastDate = '';
            
            messages.forEach(msg => {
                const msgDate = new Date(msg.createdAt).toLocaleDateString('pt-BR');
                if (msgDate !== lastDate) {
                    html += `<div class="date-divider">${formatDateLabel(msg.createdAt)}</div>`;
                    lastDate = msgDate;
                }
                
                const isOutgoing = msg.direction === 'outgoing';
                const time = formatTime(msg.createdAt);
                const isSystem = msg.isSystem || msg.type === 'system';
                
                if (isSystem) {
                    html += `
                        <div class="flex justify-center">
                            <div class="message-system px-4 py-2 text-center max-w-md">
                                <p class="text-yellow-400 text-sm">${escapeHtml(msg.content)}</p>
                                <span class="text-[10px] text-gray-500">${time}</span>
                            </div>
                        </div>
                    `;
                } else {
                    html += `
                        <div class="flex ${isOutgoing ? 'justify-end' : 'justify-start'}">
                            <div class="message-bubble ${isOutgoing ? 'message-outgoing' : 'message-incoming'} px-4 py-2.5">
                                <p class="text-white text-sm whitespace-pre-wrap">${escapeHtml(msg.content)}</p>
                                <div class="flex items-center justify-end gap-1 mt-1">
                                    <span class="text-[10px] ${isOutgoing ? 'text-indigo-200' : 'text-gray-500'}">${time}</span>
                                    ${isOutgoing ? getStatusIcon(msg.status) : ''}
                                </div>
                            </div>
                        </div>
                    `;
                }
            });
            
            container.innerHTML = html;
            container.scrollTop = container.scrollHeight;
        }
        
        function getStatusIcon(status) {
            if (status === 'read') return '<svg class="w-3 h-3 text-blue-400" fill="currentColor" viewBox="0 0 24 24"><path d="M18 7l-1.41-1.41-6.34 6.34 1.41 1.41L18 7zm4.24-1.41L11.66 16.17 7.48 12l-1.41 1.41L11.66 19l12-12-1.42-1.41z"/></svg>';
            if (status === 'delivered') return '<svg class="w-3 h-3 text-indigo-200" fill="currentColor" viewBox="0 0 24 24"><path d="M18 7l-1.41-1.41-6.34 6.34 1.41 1.41L18 7zm4.24-1.41L11.66 16.17 7.48 12l-1.41 1.41L11.66 19l12-12-1.42-1.41z"/></svg>';
            return '<svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>';
        }
        
        async function sendMessage() {
            if (!currentConversation) return;
            
            const input = document.getElementById('message-input');
            const content = input.value.trim();
            if (!content) return;
            
            const btn = document.getElementById('send-btn');
            btn.disabled = true;
            
            try {
                const res = await fetch(`/api/chat/conversations/${currentConversation.id}/messages`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
                    body: JSON.stringify({ content })
                });
                
                if (res.ok) {
                    input.value = '';
                    input.style.height = 'auto';
                    await loadMessages(currentConversation.id);
                    loadConversations(true);
                } else {
                    const data = await res.json();
                    alert(data.error || 'Erro ao enviar');
                }
            } catch (e) {
                alert('Erro ao enviar mensagem');
            }
            
            btn.disabled = false;
        }
        
        function refreshMessages() {
            if (currentConversation) loadMessages(currentConversation.id);
        }
        
        async function markAsRead(conversationId) {
            try {
                await fetch(`/api/chat/conversations/${conversationId}/read`, {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${token}` }
                });
            } catch (e) {}
        }
        
        // ============================================
        // NOVA CONVERSA
        // ============================================
        
        async function loadCustomers() {
            try {
                const res = await fetch('/api/customers?limit=500', { headers: { 'Authorization': `Bearer ${token}` } });
                if (res.ok) allCustomers = await res.json();
            } catch (e) {}
        }
        
        function openNewChat() { document.getElementById('new-chat-modal').classList.remove('hidden'); }
        function closeNewChat() {
            document.getElementById('new-chat-modal').classList.add('hidden');
            document.getElementById('new-chat-search').value = '';
            document.getElementById('new-chat-name').value = '';
            document.getElementById('new-chat-phone').value = '';
            document.getElementById('customer-results').innerHTML = '<p class="text-sm text-gray-500 text-center py-4">Digite para buscar</p>';
        }
        
        function searchCustomers() {
            const term = document.getElementById('new-chat-search').value.toLowerCase();
            const container = document.getElementById('customer-results');
            
            if (term.length < 2) {
                container.innerHTML = '<p class="text-sm text-gray-500 text-center py-4">Digite pelo menos 2 caracteres</p>';
                return;
            }
            
            const filtered = allCustomers.filter(c => (c.name && c.name.toLowerCase().includes(term)) || (c.phone && c.phone.includes(term))).slice(0, 10);
            
            if (filtered.length === 0) {
                container.innerHTML = '<p class="text-sm text-gray-500 text-center py-4">Nenhum cliente encontrado</p>';
                return;
            }
            
            container.innerHTML = filtered.map(c => `
                <button onclick="selectCustomerForChat('${c.name}', '${c.phone}')" class="w-full flex items-center gap-3 p-3 hover:bg-gray-700 rounded-lg text-left">
                    <div class="w-10 h-10 rounded-full bg-indigo-600 flex items-center justify-center text-white font-bold">${c.name.charAt(0).toUpperCase()}</div>
                    <div><p class="text-white font-medium">${c.name}</p><p class="text-xs text-gray-400 font-mono">${c.phone || 'Sem telefone'}</p></div>
                </button>
            `).join('');
        }
        
        function selectCustomerForChat(name, phone) {
            document.getElementById('new-chat-name').value = name;
            document.getElementById('new-chat-phone').value = phone;
        }
        
        async function startNewChat() {
            const name = document.getElementById('new-chat-name').value.trim();
            const phone = document.getElementById('new-chat-phone').value.replace(/\D/g, '');
            
            if (!phone) return alert('Telefone √© obrigat√≥rio');
            
            try {
                const res = await fetch('/api/chat/conversations', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
                    body: JSON.stringify({ name, phone })
                });
                
                if (res.ok) {
                    const conv = await res.json();
                    closeNewChat();
                    await loadConversations();
                    selectConversation(conv.id);
                } else {
                    const data = await res.json();
                    alert(data.error || 'Erro ao criar conversa');
                }
            } catch (e) { alert('Erro ao criar conversa'); }
        }
        
        // ============================================
        // CUSTOMER DETAILS
        // ============================================
        
        function viewCustomerDetails() {
            if (!currentConversation) return;
            
            const drawer = document.getElementById('customer-drawer');
            drawer.classList.remove('hidden');
            
            document.getElementById('customer-drawer-content').innerHTML = `
                <div class="text-center mb-6">
                    <div class="w-20 h-20 mx-auto rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold text-3xl mb-3">

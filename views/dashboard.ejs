    <!-- Script de L√≥gica -->
    <script>
        const token = localStorage.getItem('nps_token');
        if (!token) window.location.href = '/login.html';
        
        let npsChart = null;

        document.addEventListener('DOMContentLoaded', () => {
            const today = new Date();
            
            // Popula ano dinamicamente
            const yearSelect = document.getElementById('filter-year');
            const currentYear = today.getFullYear();
            yearSelect.innerHTML = `
                <option value="${currentYear}">${currentYear}</option>
                <option value="${currentYear - 1}">${currentYear - 1}</option>
            `;

            // Default: M√™s Atual
            document.getElementById('filter-month').value = today.getMonth() + 1;
            
            loadDashboard();
            loadDetractors();
        });

        async function loadDashboard() {
            const month = document.getElementById('filter-month').value;
            const year = document.getElementById('filter-year').value;
            
            try {
                const res = await fetch(`/api/admin/dashboard?month=${month}&year=${year}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (res.ok) {
                    const data = await res.json();
                    updateMetrics(data.metrics);
                    updateChart(data.chart);
                    updateFeedbacks(data.feedbacks);
                }
            } catch (e) { console.error("Erro dashboard:", e); }
        }

        // Carregar detratores pendentes
        async function loadDetractors() {
            try {
                const res = await fetch('/api/admin/messages?tab=pending-treatment&limit=6', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                if (res.ok) {
                    const data = await res.json();
                    renderDetractors(data.messages);
                }
            } catch (e) { 
                console.error("Erro ao carregar detratores:", e); 
            }
        }

        // Renderizar cards de detratores
        function renderDetractors(detractors) {
            const section = document.getElementById('detractors-section');
            const container = document.getElementById('detractors-list');
            
            if (!detractors || detractors.length === 0) {
                section.classList.add('hidden');
                return;
            }
            
            section.classList.remove('hidden');
            
            container.innerHTML = detractors.map(d => `
                <a href="/messages?tab=pending-treatment" class="detractor-card glass p-4 rounded-xl border border-red-500/30 hover:border-red-400/50 transition-all cursor-pointer group bg-red-900/10 hover:bg-red-900/20">
                    <div class="flex items-start justify-between mb-3">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-red-500 to-red-600 flex items-center justify-center text-white font-bold text-sm shadow-lg shadow-red-500/30">
                                ${(d.customer?.name || 'A')[0].toUpperCase()}
                            </div>
                            <div>
                                <p class="font-semibold text-white text-sm">${d.customer?.name || 'Cliente'}</p>
                                <p class="text-[10px] text-gray-500">${d.customer?.companyName || d.customer?.email || '-'}</p>
                            </div>
                        </div>
                        <span class="px-2 py-1 bg-red-500 text-white text-lg font-bold rounded-lg shadow-lg shadow-red-500/30">${d.score}</span>
                    </div>
                    <p class="text-xs text-gray-400 italic line-clamp-2 mb-3">"${d.comment || 'Sem coment√°rio'}"</p>
                    <div class="flex items-center justify-between">
                        <span class="text-[10px] text-gray-500">${d.answeredAt ? new Date(d.answeredAt).toLocaleDateString('pt-BR') : '-'}</span>
                        <span class="text-[10px] text-red-400 font-semibold flex items-center gap-1 group-hover:text-red-300">
                            Tratar agora
                            <svg class="w-3 h-3 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                        </span>
                    </div>
                </a>
            `).join('');
        }

        function updateMetrics(m) {
            animateValue("nps-value", parseInt(document.getElementById('nps-value').innerText) || 0, m.nps, 1000);
            
            let zoneText = "Zona de Excel√™ncia üèÜ";
            let zoneColor = "text-green-400";
            if (m.nps < 0) { zoneText = "Zona Cr√≠tica üö®"; zoneColor = "text-red-400"; }
            else if (m.nps < 50) { zoneText = "Zona de Aperfei√ßoamento ‚ö†Ô∏è"; zoneColor = "text-yellow-400"; }

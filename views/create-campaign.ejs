    <script>
        // ============================================
        // VARI√ÅVEIS GLOBAIS
        // ============================================
        const token = localStorage.getItem('nps_token');
        if (!token) window.location.href = '/login.html';
        
        let currentChannel = 'WHATSAPP';
        let currentTab = 'db';
        let currentPreset = 'PADRAO';
        let dbCustomers = [];
        let selectedIds = new Set();

        // Presets de mensagem
        const PRESETS = {
            'PADRAO': "Ol√° {{nome}}! üëã\n\nComo voc√™ avalia sua experi√™ncia com a {{empresa}}?",
            'ONBOARDING': "Ol√° {{nome}}! üöÄ\n\nQue bom ter voc√™ conosco! Gostar√≠amos de saber: como est√° sendo sua experi√™ncia inicial com a {{empresa}}?",
            'SUPORTE': "Ol√° {{nome}}! üéß\n\nRecentemente voc√™ foi atendido pela nossa equipe. Como voc√™ avalia a qualidade do suporte da {{empresa}}?",
            'AMIGAVEL': "Oi {{nome}}! Tudo bem? üòä\n\nQueremos saber sua opini√£o! De 0 a 10, quanto voc√™ recomendaria a {{empresa}} para um amigo?"
        };

        // ============================================
        // INICIALIZA√á√ÉO
        // ============================================
        document.addEventListener('DOMContentLoaded', () => {
            loadCustomers();
            loadPreset('PADRAO');
            updateSummary();
            
            // Contador de lista manual
            document.getElementById('customers-input').addEventListener('input', updateManualCount);
        });

        // ============================================
        // CANAL DE ENVIO
        // ============================================
        function selectChannel(channel) {
            currentChannel = channel;
            document.getElementById('channel').value = channel;
            
            // Reset visual
            const waCard = document.getElementById('channel-whatsapp');
            const emailCard = document.getElementById('channel-email');
            
            waCard.classList.remove('selected', 'border-green-500');
            waCard.classList.add('border-gray-600');

            document.getElementById('check-email').classList.add('hidden');
            
            if (channel === 'WHATSAPP') {
                waCard.classList.add('selected', 'border-green-500');
                waCard.classList.remove('border-gray-600');
                document.getElementById('check-whatsapp').classList.remove('hidden');
                document.getElementById('tip-wa').classList.remove('hidden');
                document.getElementById('tip-email').classList.add('hidden');

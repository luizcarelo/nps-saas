                emailCard.classList.remove('border-gray-600');
                document.getElementById('check-email').classList.remove('hidden');
                document.getElementById('tip-wa').classList.add('hidden');
                document.getElementById('tip-email').classList.remove('hidden');
                document.getElementById('contact-header').textContent = 'Email';
                document.getElementById('contact-type-warning').textContent = 'email';
                document.getElementById('manual-format-hint').textContent = 'Para Email use o endere√ßo completo (ex: joao@empresa.com.br)';
                document.getElementById('summary-channel').innerHTML = '<span class="w-2 h-2 rounded-full bg-blue-500"></span> Email';
            }
            
            renderCustomerList(dbCustomers);
            updateSummary();
        }

        // ============================================
        // PRESETS DE MENSAGEM
        // ============================================
        function loadPreset(key) {
            currentPreset = key;
            document.getElementById('message-content').value = PRESETS[key] || PRESETS['PADRAO'];
            
            // Atualiza visual
            document.querySelectorAll('.preset-card').forEach(el => el.classList.remove('selected'));
            document.getElementById(`preset-${key}`).classList.add('selected');
            
            // Auto-gera nome da campanha
            const date = new Date().toLocaleDateString('pt-BR', { month: 'long', year: 'numeric' });
            const presetNames = { PADRAO: 'Padr√£o', ONBOARDING: 'Onboarding', SUPORTE: 'Suporte', AMIGAVEL: 'Amig√°vel' };
            document.getElementById('campaign-name').value = `NPS ${presetNames[key]} - ${date.charAt(0).toUpperCase() + date.slice(1)}`;
        }
        
        function insertVariable(variable) {
            const textarea = document.getElementById('message-content');
            const start = textarea.selectionStart;
            const end = textarea.selectionEnd;
            const text = textarea.value;
            textarea.value = text.substring(0, start) + variable + text.substring(end);
            textarea.focus();
            textarea.selectionStart = textarea.selectionEnd = start + variable.length;
        }

        // ============================================
        // TABS
        // ============================================
        function switchTab(tab) {
            currentTab = tab;
            
            const tabDb = document.getElementById('tab-db');
            const tabManual = document.getElementById('tab-manual');
            const contentDb = document.getElementById('content-db');
            const contentManual = document.getElementById('content-manual');

            if (tab === 'db') {
                tabDb.classList.add('border-indigo-500', 'text-white');
                tabDb.classList.remove('border-transparent', 'text-gray-400');
                tabManual.classList.remove('border-indigo-500', 'text-white');
                tabManual.classList.add('border-transparent', 'text-gray-400');
                contentDb.classList.remove('hidden');
                contentManual.classList.add('hidden');
            } else {
                tabManual.classList.add('border-indigo-500', 'text-white');
                tabManual.classList.remove('border-transparent', 'text-gray-400');
                tabDb.classList.remove('border-indigo-500', 'text-white');
                tabDb.classList.add('border-transparent', 'text-gray-400');
                contentManual.classList.remove('hidden');
                contentDb.classList.add('hidden');
            }
            
            updateSummary();
        }

        // ============================================
        // CLIENTES
        // ============================================
        async function loadCustomers() {
            try {
                const res = await fetch('/api/customers?limit=1000', { 
                    headers: { 'Authorization': `Bearer ${token}` } 
                });
                
                if (!res.ok) throw new Error('Erro ao carregar clientes');
                
                dbCustomers = await res.json();
                renderCustomerList(dbCustomers);
            } catch (e) {
                console.error('Erro:', e);
                document.getElementById('customer-list-body').innerHTML = `
                    <tr>
                        <td colspan="5" class="p-8 text-center text-red-400">
                            <svg class="w-8 h-8 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Erro ao carregar clientes. <button onclick="loadCustomers()" class="text-indigo-400 underline">Tentar novamente</button>
                        </td>
                    </tr>
                `;
            }
        }

        function renderCustomerList(list) {
            const tbody = document.getElementById('customer-list-body');
            const contactField = currentChannel === 'WHATSAPP' ? 'phone' : 'email';
            let missingContactCount = 0;
            
            if (list.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="p-12 text-center">
                            <svg class="w-12 h-12 mx-auto mb-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                            <p class="text-gray-400 mb-2">Nenhum cliente cadastrado</p>
                            <a href="/clients" class="text-indigo-400 hover:text-indigo-300 underline">Importar clientes ‚Üí</a>
                        </td>
                    </tr>
                `;
                return;
            }
            
            tbody.innerHTML = list.map(c => {
                const contact = c[contactField];
                const hasContact = contact && contact.trim().length > 0;
                
                if (!hasContact) missingContactCount++;
                
                return `
                    <tr class="hover:bg-white/5 cursor-pointer transition ${!hasContact ? 'opacity-40' : ''}" 
                        onclick="toggleSelect('${c.id}', ${hasContact})">
                        <td class="p-4">
                            <input type="checkbox" value="${c.id}" 
                                ${selectedIds.has(c.id) ? 'checked' : ''} 
                                ${!hasContact ? 'disabled' : ''} 
                                onchange="toggleSelect('${c.id}', ${hasContact})" 
                                onclick="event.stopPropagation()"
                                class="rounded bg-gray-700 border-gray-600 text-indigo-600 focus:ring-indigo-500 cursor-pointer">
                        </td>
                        <td class="p-4">
                            <div class="font-medium text-white">${escapeHtml(c.name)}</div>
                            ${c.companyName ? `<div class="text-xs text-gray-500">${escapeHtml(c.companyName)}</div>` : ''}
                        </td>
                        <td class="p-4 font-mono text-sm ${hasContact ? 'text-gray-400' : 'text-red-400'}">
                            ${hasContact ? escapeHtml(contact) : '‚ö†Ô∏è N√£o cadastrado'}
                        </td>
                        <td class="p-4 text-gray-500 text-sm">${escapeHtml(c.sector || '-')}</td>
                        <td class="p-4 text-gray-500 text-sm">${escapeHtml(c.regional || '-')}</td>
                    </tr>
                `;
            }).join('');
            
            // Mostra aviso se h√° clientes sem contato
            document.getElementById('no-contact-warning').classList.toggle('hidden', missingContactCount === 0);
        }

        function toggleSelect(id, hasContact = true) {
            if (!hasContact) return;
            
            if (selectedIds.has(id)) {
                selectedIds.delete(id);
            } else {
                selectedIds.add(id);
            }
            
            const checkbox = document.querySelector(`input[value="${id}"]`);
            if (checkbox) checkbox.checked = selectedIds.has(id);
            
            updateSelectAllCheckbox();
            updateSummary();
        }

        function selectAll() {
            const contactField = currentChannel === 'WHATSAPP' ? 'phone' : 'email';
            dbCustomers.forEach(c => {
                if (c[contactField] && c[contactField].trim()) {
                    selectedIds.add(c.id);
                }
            });
            renderCustomerList(dbCustomers);
            updateSelectAllCheckbox();
            updateSummary();
        }

        function clearSelection() {
            selectedIds.clear();
            renderCustomerList(dbCustomers);
            updateSelectAllCheckbox();
            updateSummary();
        }

        function toggleSelectAll() {
            const checkbox = document.getElementById('select-all-checkbox');
            if (checkbox.checked) {
                selectAll();
            } else {
                clearSelection();
            }
        }

        function updateSelectAllCheckbox() {
            const contactField = currentChannel === 'WHATSAPP' ? 'phone' : 'email';
            const selectableCount = dbCustomers.filter(c => c[contactField] && c[contactField].trim()).length;
            const checkbox = document.getElementById('select-all-checkbox');
            
            if (selectableCount === 0) {
                checkbox.checked = false;
                checkbox.indeterminate = false;
            } else if (selectedIds.size === selectableCount) {
                checkbox.checked = true;
                checkbox.indeterminate = false;
            } else if (selectedIds.size > 0) {
                checkbox.checked = false;
                checkbox.indeterminate = true;
            } else {
                checkbox.checked = false;
                checkbox.indeterminate = false;
            }
        }

        function filterCustomers() {
            const term = document.getElementById('db-search').value.toLowerCase().trim();
            const contactField = currentChannel === 'WHATSAPP' ? 'phone' : 'email';
            
            if (!term) {
                renderCustomerList(dbCustomers);
                return;
            }
            
            const filtered = dbCustomers.filter(c => 
                c.name.toLowerCase().includes(term) || 
                (c[contactField] && c[contactField].toLowerCase().includes(term)) ||
                (c.companyName && c.companyName.toLowerCase().includes(term)) ||
                (c.sector && c.sector.toLowerCase().includes(term)) ||
                (c.regional && c.regional.toLowerCase().includes(term))
            );
            
            renderCustomerList(filtered);
        }

        // ============================================
        // LISTA MANUAL
        // ============================================
        function updateManualCount() {
            const raw = document.getElementById('customers-input').value;
            const lines = raw.split('\n').filter(l => l.trim().length > 3);
            document.getElementById('manual-count').textContent = lines.length;
            updateSummary();
        }

        function parseManualList() {
            const raw = document.getElementById('customers-input').value;
            const lines = raw.split('\n').filter(l => l.trim().length > 3);
            
            let valid = 0;
            let invalid = 0;
            
            lines.forEach(line => {
                const parts = line.split(',');
                if (parts.length >= 2 && parts[0].trim() && parts[1].trim()) {
                    valid++;
                } else {
                    invalid++;
                }
            });
            
            Swal.fire({
                icon: invalid > 0 ? 'warning' : 'success',
                title: 'Valida√ß√£o da Lista',
                html: `
                    <div class="text-left">
                        <p class="text-green-500">‚úÖ ${valid} contatos v√°lidos</p>
                        ${invalid > 0 ? `<p class="text-red-500">‚ùå ${invalid} linhas inv√°lidas</p>` : ''}
                    </div>
                `,
                confirmButtonColor: '#6366f1'
            });
        }

        // ============================================
        // RESUMO
        // ============================================
        function updateSummary() {
            let count = 0;
            
            if (currentTab === 'db') {
                count = selectedIds.size;
            } else {
                const raw = document.getElementById('customers-input').value;
                count = raw.split('\n').filter(l => l.trim().length > 3).length;
            }
            
            document.getElementById('selected-count').textContent = count;
            document.getElementById('summary-count').textContent = count;
        }

        // ============================================
        // UTILIT√ÅRIOS
        // ============================================
        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // ============================================
        // ENVIO DA CAMPANHA
        // ============================================
        async function handleDispatch(e) {
            e.preventDefault();
            
            const btn = document.getElementById('submit-btn');
            const contactField = currentChannel === 'WHATSAPP' ? 'phone' : 'email';
            
            let finalCustomers = [];
            
            // Coleta destinat√°rios
            if (currentTab === 'db') {
                if (selectedIds.size === 0) {
                    return Swal.fire({
                        icon: 'warning',
                        title: 'Nenhum cliente selecionado',
                        text: 'Selecione pelo menos um cliente para enviar a pesquisa.',
                        confirmButtonColor: '#6366f1'
                    });
                }
                
                finalCustomers = dbCustomers
                    .filter(c => selectedIds.has(c.id) && c[contactField])
                    .map(c => ({
                        id: c.id,
                        name: c.name,
                        phone: c.phone,
                        email: c.email,
                        role: c.role,
                        regional: c.regional,
                        sector: c.sector
                    }));
            } else {
                const raw = document.getElementById('customers-input').value;
                finalCustomers = raw.split('\n')
                    .filter(l => l.trim().length > 3)
                    .map(l => {
                        const parts = l.split(',');
                        const name = parts[0]?.trim() || 'Cliente';
                        const contact = parts[1]?.trim() || '';
                        
                        return currentChannel === 'WHATSAPP' 
                            ? { name, phone: contact.replace(/\D/g, '') }
                            : { name, email: contact };
                    })
                    .filter(c => currentChannel === 'WHATSAPP' ? c.phone : c.email);
                
                if (finalCustomers.length === 0) {
                    return Swal.fire({
                        icon: 'warning',
                        title: 'Lista vazia ou inv√°lida',
                        text: 'Adicione pelo menos um contato v√°lido na lista manual.',
                        confirmButtonColor: '#6366f1'
                    });
                }
            }

            // Valida mensagem
            const messageContent = document.getElementById('message-content').value.trim();
            if (!messageContent) {
                return Swal.fire({
                    icon: 'warning',
                    title: 'Mensagem vazia',
                    text: 'Digite uma mensagem para enviar na pesquisa.',
                    confirmButtonColor: '#6366f1'
                });
            }

            // Valida nome da campanha
            const campaignName = document.getElementById('campaign-name').value.trim();
            if (!campaignName) {
                return Swal.fire({
                    icon: 'warning',
                    title: 'Nome da campanha',
                    text: 'Digite um nome para identificar esta campanha.',
                    confirmButtonColor: '#6366f1'
                });
            }

            // Confirma√ß√£o
            const confirm = await Swal.fire({
                title: 'Confirmar Envio',
                html: `
                    <div class="text-left space-y-3">
                        <div class="flex justify-between p-3 bg-gray-100 rounded-lg">
                            <span class="text-gray-600">Campanha:</span>
                            <strong>${escapeHtml(campaignName)}</strong>
                        </div>
                        <div class="flex justify-between p-3 bg-gray-100 rounded-lg">
                            <span class="text-gray-600">Canal:</span>
                            <strong>${currentChannel === 'WHATSAPP' ? 'üí¨ WhatsApp' : 'üìß Email'}</strong>
                        </div>
                        <div class="flex justify-between p-3 bg-gray-100 rounded-lg">
                            <span class="text-gray-600">Destinat√°rios:</span>
                            <strong class="text-indigo-600">${finalCustomers.length} contatos</strong>
                        </div>
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#6366f1',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'üöÄ Enviar Agora',
                cancelButtonText: 'Cancelar'
            });

            if (!confirm.isConfirmed) return;

            // Inicia envio
            btn.disabled = true;
            btn.innerHTML = `
                <svg class="animate-spin h-5 w-5" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span>Iniciando campanha...</span>
            `;

            try {
                const res = await fetch('/api/campaigns/dispatch', {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json', 
                        'Authorization': `Bearer ${token}` 
                    },
                    body: JSON.stringify({
                        name: campaignName,
                        channel: currentChannel,
                        template: currentPreset,
                        message: messageContent,
                        customers: finalCustomers
                    })
                });

                const data = await res.json();

                if (res.ok) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Campanha Iniciada! üéâ',
                        html: `
                            <p>${finalCustomers.length} pesquisas est√£o sendo enviadas.</p>
                            <p class="text-sm text-gray-500 mt-2">Acompanhe o progresso no dashboard.</p>
                        `,
                        timer: 3000,
                        showConfirmButton: false
                    });
                    window.location.href = '/dashboard';
                } else {
                    throw new Error(data.error || 'Erro ao iniciar campanha');
                }
            } catch (err) {
                Swal.fire({
                    icon: 'error',
                    title: 'Erro',
                    text: err.message || 'Erro de conex√£o. Tente novamente.',
                    confirmButtonColor: '#6366f1'
                });
                
                btn.disabled = false;
                btn.innerHTML = `
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                    </svg>
                    Iniciar Campanha
                `;
            }
        }

        // ============================================
        // SALVAR RASCUNHO
        // ============================================
        async function saveDraft() {
            const campaignName = document.getElementById('campaign-name').value.trim();
            if (!campaignName) {
                return Swal.fire({
                    icon: 'warning',
                    title: 'Nome obrigat√≥rio',
                    text: 'Digite um nome para salvar o rascunho.',
                    confirmButtonColor: '#6366f1'
                });
            }
            
            // Salvar em localStorage como backup
            const draft = {
                name: campaignName,
                channel: currentChannel,
                template: currentPreset,
                message: document.getElementById('message-content').value,
                selectedIds: Array.from(selectedIds),
                savedAt: new Date().toISOString()
            };
            
            localStorage.setItem('nps_campaign_draft', JSON.stringify(draft));
            
            await Swal.fire({
                icon: 'success',
                title: 'Rascunho Salvo',
                text: 'Voc√™ pode continuar mais tarde.',
                timer: 2000,
                showConfirmButton: false
            });
        }

        // Carregar rascunho se existir
        const savedDraft = localStorage.getItem('nps_campaign_draft');
        if (savedDraft) {
            try {
                const draft = JSON.parse(savedDraft);
                const savedDate = new Date(draft.savedAt);
                const daysSince = Math.floor((Date.now() - savedDate) / (1000 * 60 * 60 * 24));
                
                if (daysSince < 7) {
                    Swal.fire({
                        title: 'Rascunho Encontrado',
                        text: `Voc√™ tem um rascunho "${draft.name}" salvo. Deseja continuar?`,

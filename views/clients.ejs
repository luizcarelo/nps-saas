            const csvContent = "data:text/csv;charset=utf-8,Nome,Telefone,Email,Empresa,Cargo,Regional,Setor\nJo√£o Silva,5511999999999,joao@email.com,Empresa Exemplo,Gerente,Sul,Varejo";
            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", "modelo_importacao_nps.csv");
            document.body.appendChild(link);
            link.click();

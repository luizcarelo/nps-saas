<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('partials/head', { title: 'Gest√£o de Clientes', branding: settings }) %>
    <style>
        .accordion-content { transition: max-height 0.3s ease-in-out, opacity 0.3s ease-in-out; }
        .rotate-180 { transform: rotate(180deg); }
        
        /* Toggle Switch Customizado */
        .toggle-checkbox:checked {
            right: 0;
            border-color: #68D391;
        }
        .toggle-checkbox:checked + .toggle-label {
            background-color: #68D391;
        }
        
        /* Estilos do Toggle Switch no Modal */
        .toggle-bg { transition: background-color 0.2s ease-in-out; }
        input:checked ~ .toggle-bg { background-color: #4f46e5; }
        input:checked ~ .dot { transform: translateX(100%); }
    </style>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen relative">
    <div class="fixed inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 pointer-events-none z-0"></div>
    <%- include('partials/navbar', { page: 'clients', user: user }) %>

    <main class="relative z-10 max-w-7xl mx-auto py-8 px-4">
        
        <!-- HEADER & STATS -->
        <div class="mb-8">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-white mb-2">Carteira de Clientes</h1>
                    <p class="text-gray-400 text-sm">Gerencie sua base de contatos, empresas e segmenta√ß√µes.</p>
                </div>
            </div>

            <!-- Cards de M√©tricas -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="glass p-4 rounded-xl border border-gray-700/50 flex items-center justify-between relative overflow-hidden">
                    <div class="relative z-10">
                        <p class="text-xs text-gray-400 uppercase font-bold tracking-wider">Total de Clientes</p>
                        <h3 class="text-3xl font-bold text-white mt-1" id="stat-total">--</h3>
                    </div>
                    <div class="p-3 bg-indigo-500/20 rounded-lg text-indigo-400 text-2xl">üë•</div>
                </div>
                <div class="glass p-4 rounded-xl border border-green-500/20 flex items-center justify-between relative overflow-hidden">
                    <div class="relative z-10">
                        <p class="text-xs text-green-400 uppercase font-bold tracking-wider">Ativos</p>
                        <h3 class="text-3xl font-bold text-white mt-1" id="stat-active">--</h3>
                    </div>
                    <div class="p-3 bg-green-500/20 rounded-lg text-green-400 text-2xl">‚úÖ</div>
                </div>
                <div class="glass p-4 rounded-xl border border-red-500/20 flex items-center justify-between relative overflow-hidden">
                    <div class="relative z-10">
                        <p class="text-xs text-gray-500 uppercase font-bold tracking-wider">Inativos</p>
                        <h3 class="text-3xl font-bold text-gray-300 mt-1" id="stat-inactive">--</h3>
                    </div>
                    <div class="p-3 bg-gray-700/50 rounded-lg text-gray-500 text-2xl">‚õî</div>
                </div>
            </div>
        </div>

        <!-- A√á√ïES E BUSCA -->
        <div class="flex flex-col md:flex-row gap-4 mb-6 justify-between items-center">
            <!-- Barra de Busca -->
            <div class="glass rounded-xl p-3 border border-gray-700/50 flex items-center gap-3 w-full md:max-w-lg">
                <svg class="w-5 h-5 text-gray-500 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                <input type="text" id="search-input" onkeyup="filterList()" placeholder="Buscar por nome, empresa, cargo..." class="bg-transparent border-none text-white w-full focus:ring-0 placeholder-gray-500 outline-none text-sm">
            </div>

            <!-- Bot√µes -->
            <div class="flex gap-3 w-full md:w-auto">
                <button onclick="openImportModal()" class="flex-1 md:flex-none bg-gray-800 hover:bg-gray-700 border border-gray-600 text-gray-300 font-bold py-2.5 px-5 rounded-xl text-sm flex items-center justify-center gap-2 transition">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
                    Importar CSV
                </button>
                <button onclick="openModal()" class="flex-1 md:flex-none bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-2.5 px-6 rounded-xl text-sm flex items-center justify-center gap-2 shadow-lg shadow-indigo-500/20 transition transform hover:scale-105">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                    Novo Contato
                </button>
            </div>
        </div>

        <!-- LISTA AGRUPADA -->
        <div id="clients-container" class="space-y-4">
            <div class="text-center py-16 text-gray-500 flex flex-col items-center">
                <div class="animate-spin inline-block w-8 h-8 border-4 border-indigo-500 border-t-transparent rounded-full mb-4"></div>
                <p>Carregando sua carteira...</p>
            </div>
        </div>
    </main>

    <!-- MODAL CRIAR/EDITAR -->
    <div id="client-modal" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center p-4 z-50 transition-opacity">
        <div class="glass bg-gray-900 rounded-2xl w-full max-w-lg border border-gray-700 shadow-2xl p-6 relative transform transition-all scale-100">
            <button onclick="closeModal()" class="absolute top-4 right-4 text-gray-500 hover:text-white transition">‚úï</button>
            
            <h3 id="modal-title" class="text-xl font-bold text-white mb-6 flex items-center gap-2">
                <div class="p-2 bg-indigo-500/20 rounded-lg"><svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg></div>
                <span id="modal-title-text">Novo Contato</span>
            </h3>

            <form id="client-form" onsubmit="saveClient(event)" class="space-y-4">
                <input type="hidden" id="client-id">
                
                <!-- Status Switch no Modal -->
                <div class="flex items-center justify-between bg-gray-800/50 p-3 rounded-xl border border-gray-700">
                    <span class="text-sm font-medium text-gray-300">Status do Cliente</span>
                    <label class="flex items-center cursor-pointer">
                        <div class="relative">
                            <input type="checkbox" id="isActive" class="sr-only" checked>
                            <div class="w-10 h-6 bg-gray-700 rounded-full shadow-inner block toggle-bg transition"></div>
                            <div class="dot absolute left-1 top-1 bg-white w-4 h-4 rounded-full transition transform transition-transform duration-200 ease-in-out"></div>
                        </div>
                        <span class="ml-3 text-sm font-medium text-gray-400" id="status-label">Ativo</span>
                    </label>
                </div>
                
                <div class="p-5 bg-gray-800/30 rounded-xl border border-gray-700 space-y-4">
                    <div>
                        <label class="block text-xs font-bold text-indigo-400 uppercase mb-1">Empresa</label>
                        <input type="text" id="companyName" required placeholder="Nome da Empresa" class="w-full bg-gray-900 border border-gray-600 rounded-lg px-3 py-2.5 text-white focus:border-indigo-500 outline-none transition text-sm">
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs text-gray-500 mb-1">Regional</label>
                            <input type="text" id="regional" list="list-regions" class="w-full bg-gray-900 border border-gray-600 rounded-lg px-3 py-2 text-white focus:border-indigo-500 outline-none text-sm" placeholder="Selecione...">
                            <datalist id="list-regions"></datalist>
                        </div>
                        <div>
                            <label class="block text-xs text-gray-500 mb-1">Setor</label>
                            <input type="text" id="sector" list="list-sectors" class="w-full bg-gray-900 border border-gray-600 rounded-lg px-3 py-2 text-white focus:border-indigo-500 outline-none text-sm" placeholder="Selecione...">
                            <datalist id="list-sectors"></datalist>
                        </div>
                    </div>
                </div>

                <div class="p-5 bg-gray-800/30 rounded-xl border border-gray-700 space-y-4">
                    <div>
                        <label class="block text-xs font-bold text-green-400 uppercase mb-1">Contato</label>
                        <input type="text" id="name" required placeholder="Nome Completo" class="w-full bg-gray-900 border border-gray-600 rounded-lg px-3 py-2.5 text-white focus:border-indigo-500 outline-none transition text-sm">
                    </div>
                    
                    <div>
                        <label class="block text-xs text-gray-500 mb-1">Cargo</label>
                        <input type="text" id="role" list="list-roles" placeholder="Ex: Diretor de TI" class="w-full bg-gray-900 border border-gray-600 rounded-lg px-3 py-2 text-white focus:border-indigo-500 outline-none text-sm">
                        <datalist id="list-roles"></datalist>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs text-gray-500 mb-1">Telefone</label>
                            <input type="text" id="phone" placeholder="55119..." class="w-full bg-gray-900 border border-gray-600 rounded-lg px-3 py-2 text-white focus:border-indigo-500 outline-none text-sm font-mono">
                        </div>
                        <div>
                            <label class="block text-xs text-gray-500 mb-1">Email</label>
                            <input type="email" id="email" placeholder="nome@empresa.com" class="w-full bg-gray-900 border border-gray-600 rounded-lg px-3 py-2 text-white focus:border-indigo-500 outline-none text-sm">
                        </div>
                    </div>
                </div>

                <div class="flex justify-end gap-3 pt-2">
                    <button type="button" onclick="closeModal()" class="px-5 py-2.5 text-gray-400 hover:text-white text-sm font-medium transition">Cancelar</button>
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-2.5 px-8 rounded-xl shadow-lg transition transform hover:scale-105 text-sm">Salvar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- MODAL IMPORTA√á√ÉO -->
    <div id="import-modal" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm items-center justify-center p-4 z-50 flex">
        <div class="glass bg-gray-900 rounded-2xl w-full max-w-md border border-gray-700 p-8 shadow-2xl relative">
            <button onclick="document.getElementById('import-modal').classList.add('hidden')" class="absolute top-4 right-4 text-gray-500 hover:text-white">‚úï</button>
            
            <div class="text-center mb-6">
                <div class="w-12 h-12 bg-green-500/10 rounded-full flex items-center justify-center mx-auto mb-3">
                    <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
                </div>
                <h3 class="text-xl font-bold text-white">Importar em Massa</h3>
                <p class="text-sm text-gray-400 mt-1">Carregue um arquivo CSV com seus contatos.</p>
            </div>

            <form onsubmit="uploadCSV(event)" class="space-y-4">
                <div class="border-2 border-dashed border-gray-600 rounded-xl p-6 text-center hover:border-indigo-500 transition bg-gray-800/30">
                    <input type="file" id="csv-file" accept=".csv" required class="w-full text-sm text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-semibold file:bg-indigo-600 file:text-white hover:file:bg-indigo-500 cursor-pointer">
                </div>
                
                <div class="flex justify-between items-center pt-2">
                    <button type="button" onclick="downloadTemplate()" class="text-xs text-indigo-400 hover:text-indigo-300 flex items-center gap-1 font-medium">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                        Baixar Modelo (.csv)
                    </button>
                    <button type="submit" class="bg-green-600 hover:bg-green-500 text-white font-bold py-2 px-6 rounded-lg text-sm shadow-lg transition">Carregar</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const token = localStorage.getItem('nps_token');
        let allCustomers = [];

        // CSS din√¢mico para o toggle switch se necess√°rio
        const style = document.createElement('style');
        style.innerHTML = `
            input:checked ~ .toggle-bg { background-color: #4f46e5; }
            input:checked ~ .dot { transform: translateX(100%); }
        `;
        document.head.appendChild(style);

        document.addEventListener('DOMContentLoaded', () => {
            loadClients();
            loadSettingsForAutocomplete();
            
            // Toggle Listener no Modal
            document.getElementById('isActive').addEventListener('change', function() {
                document.getElementById('status-label').innerText = this.checked ? 'Ativo' : 'Inativo';
            });
        });

        async function loadClients() {
            try {
                const res = await fetch('/api/customers', { headers: { 'Authorization': `Bearer ${token}` } });
                const data = await res.json();
                allCustomers = data;
                
                // Atualiza Stats
                const total = data.length;
                const active = data.filter(c => c.isActive !== false).length; // Default true
                
                document.getElementById('stat-total').innerText = total;
                document.getElementById('stat-active').innerText = active;
                document.getElementById('stat-inactive').innerText = total - active;

                renderGroupedList(data);
            } catch (e) { console.error(e); }
        }

        async function loadSettingsForAutocomplete() {
            try {
                const res = await fetch('/api/admin/settings', { headers: { 'Authorization': `Bearer ${token}` } });
                const settings = await res.json();
                
                populateDatalist('list-regions', settings.regions);
                populateDatalist('list-sectors', settings.sectors);
                populateDatalist('list-roles', settings.roles);
            } catch (e) { console.error("Erro autocomplete:", e); }
        }

        function populateDatalist(id, items) {
            const list = document.getElementById(id);
            list.innerHTML = ''; 
            if (items && Array.isArray(items)) {
                items.forEach(item => {
                    const option = document.createElement('option');
                    option.value = item;
                    list.appendChild(option);
                });
            }
        }

        function renderGroupedList(customers) {
            const container = document.getElementById('clients-container');
            container.innerHTML = '';

            if(customers.length === 0) {
                container.innerHTML = '<div class="text-center py-16 text-gray-500 bg-gray-800/20 rounded-2xl border border-gray-800"><p>Nenhum cliente encontrado.</p><button onclick="openModal()" class="text-indigo-400 text-sm mt-2 hover:underline">Adicionar o primeiro</button></div>';
                return;
            }

            const grouped = customers.reduce((acc, curr) => {
                const company = curr.companyName || curr.name || 'Sem Empresa';
                if (!acc[company]) acc[company] = [];
                acc[company].push(curr);
                return acc;
            }, {});

            Object.entries(grouped).forEach(([company, contacts], index) => {
                const regional = contacts[0].regional || 'Geral';
                const totalContacts = contacts.length;

                const card = document.createElement('div');
                card.className = "glass rounded-xl border border-gray-700/50 overflow-hidden transition hover:border-indigo-500/30 shadow-lg";
                
                card.innerHTML = `
                    <div onclick="toggleAccordion('acc-${index}')" class="p-5 flex items-center justify-between cursor-pointer bg-gray-800/40 hover:bg-gray-800/60 transition group">
                        <div class="flex items-center gap-4">
                            <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-gray-800 to-gray-900 border border-gray-700 flex items-center justify-center text-indigo-400 font-bold text-xl shadow-inner group-hover:text-white transition">
                                ${company.charAt(0).toUpperCase()}
                            </div>
                            <div>
                                <h3 class="font-bold text-white text-lg group-hover:text-indigo-300 transition">${company}</h3>
                                <div class="flex items-center gap-2 text-xs text-gray-400">
                                    <span class="bg-gray-700/50 border border-gray-600 px-2 py-0.5 rounded">${regional}</span>
                                    <span>‚Ä¢ ${totalContacts} contatos</span>
                                </div>
                            </div>
                        </div>
                        <svg id="icon-acc-${index}" class="w-5 h-5 text-gray-500 transform transition-transform group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </div>
                    
                    <div id="acc-${index}" class="hidden bg-gray-900/30 border-t border-gray-700/50">
                        <table class="w-full text-left text-sm">
                            <thead class="text-xs text-gray-500 uppercase bg-gray-800/50 border-b border-gray-700/50">
                                <tr>
                                    <th class="px-6 py-3 font-medium">Status</th>
                                    <th class="px-6 py-3 font-medium">Contato</th>
                                    <th class="px-6 py-3 font-medium">Cargo</th>
                                    <th class="px-6 py-3 font-medium">Canais</th>
                                    <th class="px-6 py-3 text-right font-medium">A√ß√µes</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-700/50">
                                ${contacts.map(c => {
                                    const isActive = c.isActive !== false;
                                    const statusDot = isActive ? 'bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.5)]' : 'bg-gray-600';
                                    const opacity = isActive ? '' : 'opacity-50 grayscale';
                                    
                                    return `
                                    <tr class="hover:bg-white/5 transition group ${opacity}">
                                        <td class="px-6 py-4">
                                            <button onclick="toggleStatus('${c.id}', ${!isActive})" class="flex items-center gap-2 text-xs font-medium px-2 py-1 rounded bg-gray-800 border border-gray-700 hover:border-gray-500 transition" title="Clique para alterar">
                                                <div class="w-2 h-2 rounded-full ${statusDot}"></div>
                                                ${isActive ? 'Ativo' : 'Inativo'}
                                            </button>
                                        </td>
                                        <td class="px-6 py-4 font-medium text-white">${c.name}</td>
                                        <td class="px-6 py-4">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-900/30 text-indigo-300 border border-indigo-500/20">
                                                ${c.role || 'Geral'}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-gray-400 text-xs font-mono">
                                            ${c.phone ? `<div class="flex items-center gap-1"><svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>${c.phone}</div>` : ''}
                                            ${c.email ? `<div class="flex items-center gap-1 mt-0.5"><svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>${c.email}</div>` : ''}
                                        </td>
                                        <td class="px-6 py-4 text-right">
                                            <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                                <button onclick='editClient(${JSON.stringify(c).replace(/'/g, "&#39;")})' class="p-1.5 text-gray-400 hover:text-white hover:bg-gray-700 rounded transition" title="Editar">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
                                                </button>
                                                <button onclick="deleteClient('${c.id}')" class="p-1.5 text-red-400 hover:text-red-200 hover:bg-red-900/30 rounded transition" title="Excluir">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    `
                                }).join('')}
                                <tr>
                                    <td colspan="5" class="px-6 py-3 text-center bg-gray-800/20 hover:bg-gray-800/40 transition cursor-pointer" onclick="addContactToCompany('${company}')">
                                        <div class="flex items-center justify-center gap-1 text-xs font-bold text-gray-500 hover:text-indigo-400">
                                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                                            Novo Contato em ${company}
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        function filterList() {
            const term = document.getElementById('search-input').value.toLowerCase();
            const filtered = allCustomers.filter(c => 
                (c.name && c.name.toLowerCase().includes(term)) ||
                (c.companyName && c.companyName.toLowerCase().includes(term)) ||
                (c.role && c.role.toLowerCase().includes(term)) ||
                (c.phone && c.phone.includes(term))
            );
            renderGroupedList(filtered);
        }

        function toggleAccordion(id) {
            const el = document.getElementById(id);
            const icon = document.getElementById('icon-' + id);
            if (el.classList.contains('hidden')) {
                el.classList.remove('hidden');
                icon.classList.add('rotate-180');
            } else {
                el.classList.add('hidden');
                icon.classList.remove('rotate-180');
            }
        }

        // --- CRUD ACTIONS ---

        function openModal(isEdit = false) {
            document.getElementById('client-modal').classList.remove('hidden');
            document.getElementById('client-modal').classList.add('flex');
            document.getElementById('modal-title-text').innerText = isEdit ? 'Editar Contato' : 'Novo Contato';
            
            // Reset status toggle on new
            if (!isEdit) {
                document.getElementById('isActive').checked = true;
                document.getElementById('status-label').innerText = 'Ativo';
            }
        }

        function closeModal() {
            document.getElementById('client-modal').classList.add('hidden');
            document.getElementById('client-modal').classList.remove('flex');
            document.getElementById('client-form').reset();
            document.getElementById('client-id').value = '';
        }

        function addContactToCompany(companyName) {
            openModal(false);
            document.getElementById('companyName').value = companyName;
        }

        function editClient(client) {
            openModal(true);
            document.getElementById('client-id').value = client.id;
            document.getElementById('companyName').value = client.companyName || '';
            document.getElementById('name').value = client.name;
            document.getElementById('phone').value = client.phone || '';
            document.getElementById('email').value = client.email || '';
            document.getElementById('role').value = client.role || '';
            document.getElementById('regional').value = client.regional || '';
            document.getElementById('sector').value = client.sector || '';
            
            const isActive = client.isActive !== false;
            document.getElementById('isActive').checked = isActive;
            document.getElementById('status-label').innerText = isActive ? 'Ativo' : 'Inativo';
        }

        async function saveClient(e) {
            e.preventDefault();
            const id = document.getElementById('client-id').value;
            const payload = {
                companyName: document.getElementById('companyName').value,
                name: document.getElementById('name').value,
                phone: document.getElementById('phone').value,
                email: document.getElementById('email').value,
                role: document.getElementById('role').value,
                regional: document.getElementById('regional').value,
                sector: document.getElementById('sector').value,
                isActive: document.getElementById('isActive').checked
            };

            const url = id ? `/api/customers/${id}` : '/api/customers';
            const method = id ? 'PUT' : 'POST';

            try {
                const btn = e.target.querySelector('button[type="submit"]');
                const originalText = btn.innerText;
                btn.disabled = true;
                btn.innerHTML = 'Salvando...';

                const res = await fetch(url, {
                    method: method,
                    headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
                    body: JSON.stringify(payload)
                });
                
                if (res.ok) {
                    closeModal();
                    loadClients();
                } else {
                    alert('Erro ao salvar. Verifique se o telefone j√° n√£o est√° cadastrado.');
                }
                
                btn.disabled = false;
                btn.innerHTML = originalText;
            } catch (err) { alert('Erro de conex√£o.'); }
        }

        async function toggleStatus(id, newStatus) {
            if (!confirm(`Deseja ${newStatus ? 'ativar' : 'desativar'} este cliente?`)) return;

            const client = allCustomers.find(c => c.id === id);
            if (!client) return;

            const payload = { ...client, isActive: newStatus };
            
            try {
                const res = await fetch(`/api/customers/${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
                    body: JSON.stringify(payload)
                });
                
                if (res.ok) {
                    loadClients();
                } else {
                    alert("Erro ao atualizar status.");
                }
            } catch (e) { alert("Erro de conex√£o."); }
        }

        async function deleteClient(id) {
            if(!confirm("ATEN√á√ÉO: Isso remover√° o hist√≥rico deste cliente. Continuar?")) return;
            await fetch(`/api/customers/${id}`, { method: 'DELETE', headers: { 'Authorization': `Bearer ${token}` } });
            loadClients();
        }

        function openImportModal() { document.getElementById('import-modal').classList.remove('hidden'); }
        
        async function uploadCSV(e) {
            e.preventDefault();
            const btn = e.target.querySelector('button[type="submit"]');
            btn.innerHTML = 'Enviando...';
            
            const formData = new FormData();
            formData.append('file', document.getElementById('csv-file').files[0]);
            
            try {
                const res = await fetch('/api/customers/import', { method: 'POST', headers: { 'Authorization': `Bearer ${token}` }, body: formData });
                const result = await res.json();
                
                if(res.ok) {
                    alert(`Importa√ß√£o conclu√≠da!\nSucesso: ${result.imported}\nFalhas: ${result.failed}`);
                    document.getElementById('import-modal').classList.add('hidden');
                    loadClients();
                } else {
                    alert("Erro na importa√ß√£o: " + result.error);
                }
            } catch(err) { alert("Erro ao enviar arquivo."); }
            
            btn.innerHTML = 'Carregar';
        }


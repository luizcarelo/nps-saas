<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pesquisa de Satisfa√ß√£o | <%= tenant.name %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .score-btn {
            transition: all 0.2s ease;
        }
        .score-btn:hover {
            transform: scale(1.1);
        }
        .score-btn.selected {
            transform: scale(1.15);
            box-shadow: 0 0 0 3px rgba(255,255,255,0.3);
        }
        .bg-pattern {
            background-image: radial-gradient(rgba(99, 102, 241, 0.1) 1px, transparent 1px);
            background-size: 20px 20px;
        }
    </style>
</head>
<body class="min-h-screen bg-gray-900 bg-pattern flex items-center justify-center p-4" style="--brand-color: <%= branding.brandColor || '#4F46E5' %>;">
    
    <div class="w-full max-w-lg">
        <!-- Card Principal -->
        <div class="bg-gray-800/80 backdrop-blur-lg rounded-3xl shadow-2xl border border-gray-700/50 overflow-hidden">
            
            <!-- Header -->
            <div class="p-8 text-center border-b border-gray-700/50" style="background: linear-gradient(135deg, <%= branding.brandColor || '#4F46E5' %>22 0%, transparent 100%);">
                <% if (branding.logoUrl) { %>
                    <img src="<%= branding.logoUrl %>" alt="<%= tenant.name %>" class="h-12 mx-auto mb-4">
                <% } else { %>
                    <div class="w-16 h-16 rounded-2xl mx-auto mb-4 flex items-center justify-center text-white text-2xl font-bold" style="background: <%= branding.brandColor || '#4F46E5' %>;">
                        <%= tenant.name.charAt(0) %>
                    </div>
                <% } %>
                <h1 class="text-2xl font-bold text-white mb-2">Ol√°, <%= customer.name.split(' ')[0] %>! üëã</h1>
                <p class="text-gray-400">Sua opini√£o √© muito importante para n√≥s</p>
            </div>

            <!-- Formul√°rio -->
            <form id="vote-form" onsubmit="submitVote(event)" class="p-8">
                
                <!-- Pergunta Principal -->
                <div class="text-center mb-8">
                    <p class="text-lg text-gray-200 mb-2">De <strong>0 a 10</strong>, quanto voc√™ recomendaria</p>
                    <p class="text-xl font-bold text-white"><%= tenant.name %>?</p>
                </div>

                <!-- Score Selector -->
                <div class="flex flex-wrap justify-center gap-2 mb-8">
                    <% for (let i = 0; i <= 10; i++) { %>
                        <% 
                            let color = i <= 6 ? 'bg-red-500 hover:bg-red-400' : (i <= 8 ? 'bg-yellow-500 hover:bg-yellow-400' : 'bg-green-500 hover:bg-green-400');
                            let borderColor = i <= 6 ? 'border-red-400' : (i <= 8 ? 'border-yellow-400' : 'border-green-400');
                        %>
                        <button type="button" onclick="selectScore(<%= i %>)" 
                            class="score-btn w-12 h-12 rounded-xl <%= color %> text-white font-bold text-lg border-2 border-transparent focus:outline-none"
                            data-score="<%= i %>">
                            <%= i %>
                        </button>
                    <% } %>
                </div>
                
                <div class="flex justify-between text-xs text-gray-500 mb-8 px-2">
                    <span>üòû N√£o recomendaria</span>
                    <span>üòç Com certeza!</span>
                </div>

                <input type="hidden" id="score" name="score" required>

                <!-- Coment√°rio -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-400 mb-2">
                        Conte-nos mais (opcional)
                    </label>
                    <textarea id="comment" name="comment" rows="4" 
                        class="w-full bg-gray-700/50 border border-gray-600 rounded-xl px-4 py-3 text-white placeholder-gray-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 outline-none transition resize-none"
                        placeholder="O que motivou sua nota? Como podemos melhorar?"></textarea>
                </div>

                <!-- Perguntas Adicionais (aparece ap√≥s selecionar nota) -->
                <div id="extra-questions" class="hidden space-y-4 mb-6 p-4 bg-gray-700/30 rounded-xl border border-gray-600/50">
                    <div>
                        <label class="block text-sm font-medium text-gray-400 mb-2">Seu problema foi resolvido?</label>
                        <div class="flex gap-3">
                            <button type="button" onclick="setProblemSolved(true)" class="flex-1 py-2 px-4 rounded-lg border border-gray-600 text-gray-300 hover:border-green-500 hover:text-green-400 transition" data-problem="true">
                                ‚úÖ Sim
                            </button>
                            <button type="button" onclick="setProblemSolved(false)" class="flex-1 py-2 px-4 rounded-lg border border-gray-600 text-gray-300 hover:border-red-500 hover:text-red-400 transition" data-problem="false">
                                ‚ùå N√£o
                            </button>
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-400 mb-2">Avalie nosso atendimento</label>
                        <div class="flex justify-center gap-2">
                            <% for (let i = 1; i <= 5; i++) { %>
                                <button type="button" onclick="setServiceRating(<%= i %>)" 
                                    class="star-btn text-3xl text-gray-600 hover:text-yellow-400 transition" data-rating="<%= i %>">
                                    ‚òÖ
                                </button>
                            <% } %>
                        </div>
                    </div>
                </div>

                <input type="hidden" id="problemSolved" name="problemSolved">
                <input type="hidden" id="serviceRating" name="serviceRating">

                <!-- Submit Button -->
                <button type="submit" id="submit-btn" disabled
                    class="w-full py-4 px-6 rounded-xl text-white font-bold text-lg transition-all disabled:opacity-50 disabled:cursor-not-allowed"
                    style="background: <%= branding.brandColor || '#4F46E5' %>;">
                    Enviar Avalia√ß√£o
                </button>
            </form>
        </div>

        <!-- Footer -->
        <p class="text-center text-gray-600 text-xs mt-6">
            Sua resposta √© confidencial e nos ajuda a melhorar.
        </p>
    </div>

    <!-- Success Modal -->
    <div id="success-modal" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center p-4 z-50">
        <div class="bg-gray-800 rounded-3xl p-10 text-center max-w-sm animate-fadeIn">
            <div class="text-6xl mb-4" id="success-emoji">üéâ</div>
            <h2 class="text-2xl font-bold text-white mb-2">Obrigado!</h2>
            <p class="text-gray-400" id="success-message">Sua avalia√ß√£o foi registrada com sucesso.</p>
        </div>
    </div>

    <script>
        const token = "<%= response.token %>";
        let selectedScore = null;
        let problemSolved = null;
        let serviceRating = null;

        function selectScore(score) {
            selectedScore = score;
            document.getElementById('score').value = score;
            document.getElementById('submit-btn').disabled = false;
            
            // Atualiza visual
            document.querySelectorAll('.score-btn').forEach(btn => {
                btn.classList.remove('selected', 'ring-2', 'ring-white');
                if (parseInt(btn.dataset.score) === score) {
                    btn.classList.add('selected', 'ring-2', 'ring-white');
                }
            });

            // Mostra perguntas extras para detratores
            if (score <= 6) {
                document.getElementById('extra-questions').classList.remove('hidden');
            } else {
                document.getElementById('extra-questions').classList.add('hidden');
            }
        }

        function setProblemSolved(value) {
            problemSolved = value;
            document.getElementById('problemSolved').value = value;
            
            document.querySelectorAll('[data-problem]').forEach(btn => {
                btn.classList.remove('border-green-500', 'text-green-400', 'border-red-500', 'text-red-400');
                if (btn.dataset.problem === String(value)) {
                    if (value) {
                        btn.classList.add('border-green-500', 'text-green-400');
                    } else {
                        btn.classList.add('border-red-500', 'text-red-400');
                    }
                }
            });
        }

        function setServiceRating(rating) {
            serviceRating = rating;
            document.getElementById('serviceRating').value = rating;
            
            document.querySelectorAll('.star-btn').forEach(btn => {
                const btnRating = parseInt(btn.dataset.rating);
                if (btnRating <= rating) {
                    btn.classList.add('text-yellow-400');
                    btn.classList.remove('text-gray-600');
                } else {
                    btn.classList.remove('text-yellow-400');
                    btn.classList.add('text-gray-600');
                }
            });
        }

        async function submitVote(e) {
            e.preventDefault();
            
            const btn = document.getElementById('submit-btn');
            btn.disabled = true;
            btn.innerHTML = '<svg class="animate-spin h-5 w-5 mx-auto" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';

            try {
                const res = await fetch('/api/vote', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        token,
                        score: selectedScore,
                        comment: document.getElementById('comment').value,
                        problemSolved: problemSolved,
                        serviceRating: serviceRating
                    })
                });

                if (res.ok) {
                    // Mostra modal de sucesso
                    const emoji = selectedScore >= 9 ? 'üéâ' : (selectedScore >= 7 ? 'üëç' : 'üôè');
                    const msg = selectedScore >= 9 
                        ? 'Ficamos muito felizes com seu feedback!' 
                        : (selectedScore >= 7 
                            ? 'Obrigado! Vamos continuar melhorando.' 
                            : 'Agradecemos seu feedback. Vamos analisar com carinho.');
                    
                    document.getElementById('success-emoji').innerText = emoji;
                    document.getElementById('success-message').innerText = msg;
                    document.getElementById('success-modal').classList.remove('hidden');
                } else {
                    throw new Error('Erro ao enviar');
                }
            } catch (error) {
                alert('Erro ao enviar sua avalia√ß√£o. Tente novamente.');
                btn.disabled = false;
                btn.innerHTML = 'Enviar Avalia√ß√£o';
            }
        }
    </script>
</body>
</html>
